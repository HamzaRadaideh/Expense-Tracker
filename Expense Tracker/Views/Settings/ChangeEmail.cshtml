@model Expense_Tracker.Models.Settings.ChangeEmailDTO

<h2>Change Email</h2>

<form asp-action="SaveEmail" method="post">
    <div class="form-group">
        <label asp-for="NewEmail">New Email</label>
        <input asp-for="NewEmail" type="email" class="form-control" required />
        <span asp-validation-for="NewEmail" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="ConfirmEmail">Confirm New Email</label>
        <input asp-for="ConfirmEmail" type="email" class="form-control" required />
        <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>
